<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/activity_results"
        tools:context=".FillResultsActivity"
        android:backgroundTint="@color/backgroundColour"
        android:background="#F1F5F8">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/appToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorLight"
                app:title="Filling results"
                app:titleTextColor="@color/colorPrimaryDark" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/MeatCard">

                <ImageView
                        android:src="@drawable/cow"
                        android:layout_margin="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageMeat"
                        android:contentDescription="Reduce meat consumtion image"/>
                <TextView
                        android:text="Reduce meat consumption"
                        android:layout_width="match_parent"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="43dp" android:id="@+id/textMeat" android:typeface="sans"
                        android:textSize="20sp" android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple2"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory2"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty2"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty2"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact2"/>
                <TextView
                        android:text="Medium impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="220dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact2"
                        android:textSize="14sp"/>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/RadioGroup">
                <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                >
                    <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Did you achieved the goal?"
                            android:textStyle="bold"
                            android:textSize="20sp"
                    />
                    <RadioButton
                            android:id="@+id/yesOption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YES"
                    />
                    <RadioButton
                            android:id="@+id/noOption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NO"
                    />
                </RadioGroup>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:gravity="center"
            >

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/goButton2"
                        android:text="SAVE RESULTS"
                        android:layout_width="200dp"
                        android:layout_height="59dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:textSize="18sp"
                        app:cornerRadius="30dp"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>