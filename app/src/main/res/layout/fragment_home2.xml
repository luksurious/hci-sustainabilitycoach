<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".FillResultsActivity"
        android:backgroundTint="@color/backgroundColour"
        android:background="#F1F5F8">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <TextView
                android:text="Recommendations for you"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"/>
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/MeatCard">
            <ImageView
                    android:src="@drawable/cow"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageMeat"
                    android:contentDescription="Reduce meat consumtion image"/>
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/fillResults"
                        android:text="Fill Results"
                        android:layout_width="200dp"
                        android:layout_height="59dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="80dp"
                        android:backgroundTint="@color/colorAccent"
                        android:textSize="18sp"
                        app:cornerRadius="30dp"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>

