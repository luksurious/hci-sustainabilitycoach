<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".Home2Fragment"
            android:backgroundTint="@color/backgroundColour"
            android:background="#F1F5F8">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="708dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            <TextView
                    android:text="Your active habits"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/MeatCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@drawable/cow"
                            android:layout_margin="0dp"
                            android:layout_width="233dp"
                            android:layout_height="108dp"
                            android:id="@+id/imageMeat"
                            android:contentDescription="Reduce meat consumtion image"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
                            app:layout_constraintVertical_bias="0.074"/>
                    <TextView
                            android:text="Reduce meat consumption"
                            android:layout_width="282dp"
                            android:layout_height="37dp" android:id="@+id/textMeat" android:typeface="sans"
                            android:textSize="20sp" android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.67"
                            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0.82"/>
                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/button2"
                            android:layout_width="207dp"
                            android:layout_height="63dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/fill_results"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.503"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.968" app:cornerRadius="30dp" android:textSize="18sp"
                            android:backgroundTint="@color/colorAccent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>