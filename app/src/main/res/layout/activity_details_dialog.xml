<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreActivity">

    <ImageView
            android:layout_width="413dp"
            android:layout_height="250dp" app:srcCompat="@drawable/cowbig"
            android:id="@+id/imageBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="Reduce meat consumption image"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:id="@+id/imageClose" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="363dp"/>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:id="@+id/detailsCard" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageBackground"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.485" app:layout_constraintVertical_bias="0.379">

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>