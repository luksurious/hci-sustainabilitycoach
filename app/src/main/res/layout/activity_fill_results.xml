<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FillResultsActivity">
    <LinearLayout
            android:id="@+id/fillresultscard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:ignore="MissingConstraints">
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/OrganicCard">
            <ImageView
                    android:src="@drawable/cow"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageMeat"
                    android:contentDescription="Reduce meat consumtion image"/>

            <TextView
                    android:text="Reduce meat consumption"
                    android:layout_width="match_parent"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="43dp" android:id="@+id/textOrganicFood" android:typeface="sans"
                    android:textSize="20sp" android:textStyle="bold"/>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/title_Habit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fillresultscard">
        <TextView
                android:text="Task: Eat no meat"
                android:layout_width="345dp"
                android:layout_height="64dp"
                android:id="@+id/labelMeat" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintVertical_bias="0.276" android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/explore_category_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fillresultscard">

        <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dbeceb"
                android:padding="15dp"
        >
            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Did you achieved the goal?"
                    android:textStyle="bold"
                    android:textSize="20sp"
            />
            <RadioButton
                    android:id="@+id/yesOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:onClick="radio_button_click"
            />
            <RadioButton
                    android:id="@+id/noOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:onClick="radio_button_click"
            />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:weightSum="100"
            android:padding="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explore_category_row2">

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Was there anything affecting the task?"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
                android:id="@+id/cb_addidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Adidas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        <CheckBox
                android:id="@+id/cb_reebok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Reebok"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_addidas" />

        <CheckBox
                android:id="@+id/cb_converse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Converse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_reebok" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="377dp"
            android:layout_height="67dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/explore_category_row2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical" android:id="@+id/linearLayout2" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.502">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/skip_button"
                android:layout_width="109dp"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="start"
                android:text="@string/explore_button_skip"
                android:textSize="16sp"
                style="@style/AppTheme.MaterialButton.Text"
                app:cornerRadius="24dp"/>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/goButton"
                android:layout_width="109dp"
                android:layout_height="59dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="end"
                android:text="@string/save"
                android:textSize="18sp"
                app:cornerRadius="24dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>