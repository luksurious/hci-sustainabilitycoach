<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/colorLight"
              android:backgroundTint="#F1F5F8">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:backgroundTint="#F1F5F8">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="255dp"
                    app:srcCompat="@drawable/graph2"
                    android:layout_marginTop="16dp"
                    android:id="@+id/graph"/>

            <TextView
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/text_graph_description"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Number of weekly performed habits"
                    android:textAlignment="center"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/text_sucess_rate"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#222222"
                    android:text="Action history"
            />
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="780dp"
                    app:srcCompat="@drawable/history"
                    android:layout_marginTop="16dp"
                    android:id="@+id/history"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>