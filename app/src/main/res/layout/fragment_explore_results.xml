<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ExploreResultsFragment"
                                                   android:backgroundTint="@color/backgroundColour"
                                                   android:background="#F1F5F8">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Recommendations for you"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="360dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                android:id="@+id/OrganicCard">

                <ImageView
                        android:src="@drawable/organic"
                        android:layout_margin="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageOrganicFood"
                        android:contentDescription="Buy organic image"/>

                <TextView
                        android:text="Buy organic food"
                        android:layout_width="match_parent"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="43dp" android:id="@+id/textOrganicFood" android:typeface="sans"
                        android:textSize="24sp" android:textStyle="bold"/>

                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple1"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory"
                        android:textSize="16sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty1"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty"
                        android:textSize="16sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact1"/>
                <TextView
                        android:text="Low impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="220dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact"
                        android:textSize="16sp"/>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/MeatCard"
                    android:layout_width="360dp"
                    android:layout_height="250dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                    app:layout_constraintHorizontal_bias="0.485"
                    android:layout_marginTop="8dp" android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintVertical_bias="0.077">>

                <ImageView
                        android:src="@drawable/cow"
                        android:layout_margin="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageMeat"
                        android:contentDescription="Reduce meat consumtion image"/>
                <TextView
                        android:text="Reduce meat consumption"
                        android:layout_width="match_parent"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="43dp" android:id="@+id/textMeat" android:typeface="sans"
                        android:textSize="24sp" android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple2"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory2"
                        android:textSize="16sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty2"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty2"
                        android:textSize="16sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact2"/>
                <TextView
                        android:text="Medium impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="220dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact2"
                        android:textSize="16sp"/>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/WasteCard"
                    android:layout_width="360dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="8dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
            >

                <ImageView
                        android:src="@drawable/waste"
                        android:layout_margin="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageWaste"
                        android:contentDescription="Reduce waste image"/>
                <TextView
                        android:text="Reduce food waste"
                        android:layout_width="327dp"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="45dp" android:id="@+id/textWaste" android:typeface="sans"
                        android:textSize="24sp" android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple3"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory3"
                        android:textSize="16sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty3"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty3"
                        android:textSize="16sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact3"/>
                <TextView
                        android:text="Low impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="220dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact3"
                        android:textSize="16sp"/>


            </com.google.android.material.card.MaterialCardView>
            <TextView
                    android:text="Didn't find anything interesting?"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" android:id="@+id/textChangeFilters"
                    android:textAlignment="center" android:textSize="18sp" android:fontFamily="sans-serif-medium"/>
            <Button
                    android:id="@+id/buttonChangeFilters"
                    android:text="CHANGE FILTERS"
                    android:layout_width="200dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="105dp"
                    android:layout_marginEnd="100dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="@color/colorAccent"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.793"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>