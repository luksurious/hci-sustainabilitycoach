<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/explore_results"
        tools:context=".explore.ExploreResultsFragment"
        android:backgroundTint="@color/backgroundColour"
        android:background="#F1F5F8">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            <TextView
                    android:text="Recommendations for you"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/OrganicCard">

                <ImageView
                        android:src="@drawable/organic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageOrganicFood"
                        android:contentDescription="Buy organic image"/>

                <TextView
                        android:text="Buy organic food"
                        android:layout_width="match_parent"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="43dp" android:id="@+id/textOrganicFood" android:typeface="sans"
                        android:textSize="20sp" android:textStyle="bold"/>

                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple1"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty1"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact1"/>
                <TextView
                        android:text="Low impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="220dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact"
                        android:textSize="14sp"/>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/MeatCard">

                <ImageView
                        android:src="@drawable/cow"
                        android:layout_margin="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageMeat"
                        android:contentDescription="Reduce meat consumtion image"/>
                <TextView
                        android:text="Reduce meat consumption"
                        android:layout_width="match_parent"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="43dp" android:id="@+id/textMeat" android:typeface="sans"
                        android:textSize="20sp" android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple2"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory2"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty2"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty2"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact2"/>
                <TextView
                        android:text="Medium impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="220dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact2"
                        android:textSize="14sp"/>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/WasteCard">

                <ImageView
                        android:src="@drawable/waste"
                        android:layout_margin="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/imageWaste"
                        android:contentDescription="Reduce waste image"/>
                <TextView
                        android:text="Reduce food waste"
                        android:layout_width="327dp"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="45dp" android:id="@+id/textWaste" android:typeface="sans"
                        android:textSize="20sp" android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple3"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory3"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty3"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty3"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="195dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact3"/>
                <TextView
                        android:text="Low impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="220dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact3"
                        android:textSize="14sp"/>


            </com.google.android.material.card.MaterialCardView>
            <TextView
                    android:text="Didn't find anything interesting?"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" android:id="@+id/textChangeFilters"
                    android:textAlignment="center" android:textSize="18sp" android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
            >
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonChangeFilters"
                        android:text="CHANGE FILTERS"
                        android:layout_width="200dp"
                        android:layout_height="59dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:textSize="18sp"
                        app:cornerRadius="30dp"
                />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>