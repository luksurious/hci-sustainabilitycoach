<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explore_results"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColour"
    android:orientation="vertical"
    tools:context=".explore.ExploreResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/montserrat"
            android:text="Recommendations for you:"
            android:textSize="18sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/OrganicCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/imageOrganicFood"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_margin="0dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Buy organic image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bio2" />

                <TextView
                    android:id="@+id/textOrganicFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Buy organic food"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:drawableStart="@drawable/ic_apple"
                        android:drawablePadding="4dp"
                        android:text="Food"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textDifficulty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:drawableStart="@drawable/ic_difficulty"
                        android:drawablePadding="4dp"
                        android:text="Easy"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textImpact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:drawableStart="@drawable/ic_leaf"
                        android:drawablePadding="4dp"
                        android:text="Low impact"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/MeatCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/imageMeat"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_margin="0dp"
                    android:contentDescription="Reduce meat consumption image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cow" />

                <TextView
                    android:id="@+id/textMeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Eat less meat"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCategory2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_apple"
                        android:drawablePadding="4dp"
                        android:text="Food"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textDifficulty2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".3"
                        android:drawableStart="@drawable/ic_difficulty"
                        android:drawablePadding="4dp"
                        android:text="Easy"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textImpact2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".40"
                        android:drawableStart="@drawable/ic_leaf"
                        android:drawablePadding="4dp"
                        android:text="Mid impact"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/WasteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/imageWaste"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_margin="0dp"
                    android:contentDescription="Reduce waste image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wasteyellow" />

                <TextView
                    android:id="@+id/textWaste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Reduce food waste"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCategory3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:drawableStart="@drawable/ic_apple"
                        android:drawablePadding="4dp"
                        android:text="Food"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textDifficulty3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:drawableStart="@drawable/ic_difficulty"
                        android:drawablePadding="4dp"
                        android:text="Easy"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textImpact3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".40"
                        android:drawableStart="@drawable/ic_leaf"
                        android:drawablePadding="4dp"
                        android:text="Low impact"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textChangeFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Didn't find anything interesting?"
            android:textAlignment="center"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonChangeFilters"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="CHANGE FILTERS"
            android:textSize="14sp"
            app:cornerRadius="24dp"
            app:strokeColor="@color/colorPrimary" />

    </LinearLayout>

</ScrollView>