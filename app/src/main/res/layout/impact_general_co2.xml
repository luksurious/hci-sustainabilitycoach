<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/colorLight"
              android:backgroundTint="#F1F5F8">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/factory"
                                android:id="@+id/imageView2"
                                android:contentDescription="Factory image"/>
                        <TextView
                                android:text="You saved 30kg of CO2 gasses, the equivalent of"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView6"
                                android:paddingTop="14dp" android:paddingBottom="2dp"
                                android:fontFamily="@font/montserrat" android:textAlignment="center"
                                android:textSize="12sp"/>
                        <TextView
                                android:text="1.1 Madrid/Zaragoza by car"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="22sp"
                                android:textColor="#141418" android:textAlignment="center" android:paddingLeft="10dp"
                                android:paddingTop="8dp" android:paddingRight="10dp" android:paddingBottom="16dp"
                                android:fontFamily="@font/montserrat_bold"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView4"
                                android:fontFamily="@font/montserrat"
                                android:textAlignment="center"
                                android:paddingLeft="10dp"
                                android:paddingTop="12dp" android:paddingRight="10dp" android:paddingBottom="12dp"
                                android:text="CO2 impact" android:background="#1B00B8D4"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_arrow_right"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:id="@+id/arrow_right"/>
            </LinearLayout>
            <TextView
                    android:text="Impact by task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:paddingLeft="24dp"
                    android:paddingTop="20dp" android:paddingRight="24dp" android:paddingBottom="6dp"
                    android:textColor="#222222" android:fontFamily="@font/montserrat_bold" android:textSize="24sp"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content" android:id="@+id/textView60"
                        android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="10dp"
                        android:text="Eat less meat" android:paddingLeft="10dp" android:textColor="#222222"
                        android:fontFamily="@font/montserrat"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_gravity="right"
                        android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="10dp"
                        android:text="7 times" android:fontFamily="@font/montserrat"/>
                <TextView
                        android:text="1.1 trip to Madrid/Zaragoza "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_marginTop="38dp"
                        android:paddingLeft="10dp" android:paddingTop="12dp" android:paddingRight="10dp"
                        android:paddingBottom="12dp" android:textAlignment="center" android:background="#2196F3"
                        android:fontFamily="@font/montserrat" android:textColor="#FFFFFF" android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content" android:id="@+id/textView61"
                        android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="10dp"
                        android:text="Recycle" android:paddingLeft="10dp" android:textColor="#222222"
                        android:fontFamily="@font/montserrat"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView70" android:layout_gravity="right"
                        android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="10dp"
                        android:text="3 times" android:fontFamily="@font/montserrat"/>
                <TextView
                        android:text="not applicable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView80"
                        android:layout_marginTop="38dp"
                        android:paddingLeft="10dp" android:paddingTop="12dp" android:paddingRight="10dp"
                        android:paddingBottom="12dp" android:textAlignment="center" android:background="#999797"
                        android:fontFamily="@font/montserrat" android:textColor="#FFFFFF" android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>