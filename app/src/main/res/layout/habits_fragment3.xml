<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/habits_fragment"
        tools:context=".explore.ExploreResultsFragment"
        android:backgroundTint="@color/backgroundColour"
        android:background="#F1F5F8">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="24dp"
                    android:layout_height="250dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/MeatCard">

                <ImageView
                        android:src="@drawable/cow"
                        android:layout_margin="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageMeat"
                        android:contentDescription="Reduce meat consumtion image"/>
                <TextView
                        android:text="Reduce meat consumption"
                        android:layout_width="match_parent"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="43dp" android:id="@+id/textMeat" android:typeface="sans"
                        android:textSize="20sp" android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_apple"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/apple1"/>
                <TextView
                        android:text="Food"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content" android:id="@+id/textCategory1"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_difficulty"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty1"/>
                <TextView
                        android:text="Easy"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="145dp"
                        android:layout_height="wrap_content" android:id="@+id/textDifficulty1"
                        android:textSize="14sp"/>
                <ImageView
                        android:src="@drawable/ic_leaf"
                        android:layout_width="20dp"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="205dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/impact1"/>
                <TextView
                        android:text="Medium impact"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="185dp"
                        android:layout_marginLeft="230dp"
                        android:layout_height="wrap_content" android:id="@+id/textImpact1"
                        android:textSize="14sp"/>

            </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="24dp"
            android:layout_height="250dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/recycle">

        <ImageView
                android:src="@drawable/recycle3"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycle_image"
                android:contentDescription="Recycle image"/>
        <TextView
                android:text="Recycle"
                android:layout_width="match_parent"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="20dp"
                android:layout_height="43dp" android:id="@+id/textRecycle" android:typeface="sans"
                android:textSize="20sp" android:textStyle="bold"/>
        <ImageView
                android:src="@drawable/ic_household"
                android:layout_width="20dp"
                android:layout_marginTop="184dp"
                android:layout_marginLeft="20dp"
                android:layout_height="22dp"
                android:id="@+id/household"/>
        <TextView
                android:text="Household"
                android:layout_width="wrap_content"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="45dp"
                android:layout_height="wrap_content" android:id="@+id/textCategory2"
                android:textSize="14sp"/>
        <ImageView
                android:src="@drawable/ic_difficulty"
                android:layout_width="20dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/difficulty2"/>
        <TextView
                android:text="Medium"
                android:layout_width="wrap_content"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="145dp"
                android:layout_height="wrap_content" android:id="@+id/textDifficulty2"
                android:textSize="14sp"/>
        <ImageView
                android:src="@drawable/ic_leaf"
                android:layout_width="20dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="205dp"
                android:layout_height="wrap_content"
                android:id="@+id/impact2"/>
        <TextView
                android:text="Medium impact"
                android:layout_width="wrap_content"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="230dp"
                android:layout_height="wrap_content" android:id="@+id/textImpact2"
                android:textSize="14sp"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>